@{
    ViewBag.Title = "Home Page";
}

<div class="row" style="margin-top: 30px;">
    <div class="col-md-3">
        <div class="filter">
            <div class="row">
                <div class="col-md-12">
                    <p class="title">Filtres</p>
                </div>
            </div>

            <hr style="margin-top: 0;" />

            <div class="row">
                <div class="col-md-12">
                    <p class="subtitle">Date :</p>
                </div>
            </div>
            <div class="row">
                <div class="col-md-2 col-md-offset-1 date">
                    From :
                </div>
                <div class="col-md-8">
                    <input class="form-control" placeholder="JJ/MM/AAAA" />
                </div>
            </div>
            <div class="row" style="margin-top: 5px;">
                <div class="col-md-2 col-md-offset-1 date">
                    To :
                </div>
                <div class="col-md-8">
                    <input class="form-control" placeholder="JJ/MM/AAAA" />
                </div>
            </div>

            <br />

            <div class="row">
                <div class="col-md-12">
                    <p class="subtitle">Popularité :</p>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <p class="popularity">
                        <span class="glyphicon glyphicon-star" aria-hidden="true"></span>
                        <span class="glyphicon glyphicon-star" aria-hidden="true"></span>
                        <span class="glyphicon glyphicon-star" aria-hidden="true"></span>
                        <span class="glyphicon glyphicon-star" aria-hidden="true"></span>
                        <span class="glyphicon glyphicon-star-empty" aria-hidden="true"></span>
                    </p>
                </div>
            </div>


            <div class="row">
                <div class="col-md-12">
                    <p class="subtitle">Catégories :</p>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="well">
                        @foreach (var category in ViewBag.categories)
                        {
                            <div class="row">
                                <div class="col-md-12 category">
                                    <input type="checkbox" value=""> @category.Name
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <div class="text-center">
                        <button type="button" class="btn btn-primary btn-block refresh">Actualiser</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-9">
        <div class="row">
            @foreach (var article in ViewBag.articles)
            {

                <div class="col-md-3" style="margin-bottom: 10px;">
                    <div class="thumbnail" style="padding: 0;">
                        <img src="@article.Image"
                             alt="article photo">
                        <div class="text-center">
                            <h3>
                                <a href="/Article/Details/@article.Id">@article.Title</a>
                            </h3>
                        </div>
                    </div>
                </div>

            }
        </div>
    </div>
</div>
