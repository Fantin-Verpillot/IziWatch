
@{
    ViewBag.Title = "Details";
    IziWatch.DBO.Article article = ViewBag.article;
}

<div class="row">
    <div class="col-md-12">
        <h2 style="font-weight: 700;">@article.Title</h2>
        <p style="font-size: 18px; font-style: italic;">
            @{
                String categoryName = IziWatch.BusinessManagement.Category.GetCategory(article.CategoryId).Name;
                if (categoryName != null)
                {
                    @IziWatch.BusinessManagement.Category.GetCategory(article.CategoryId).Name;
                }
            }
        </p>
    </div>
</div>

<hr style="margin-top: 5px;" />

<div class="row">
    <div class="col-md-12">
        <img src="@article.Image" class="img-responsive img-responsive" style="margin-left: auto; margin-right: auto;" />
    </div>
</div>

<div class="row" style="margin-top: 50px;">
    <div class="col-md-12">
        <p style="font-size: 15px;">
            @article.Text
        </p>
    </div>
</div>

<br />

<div class="row">
    <div class="col-md-12">
        <div class="pull-right">
            Date de création : @article.Date.ToString().Split(' ')[0]

            @if(ViewBag.userConnected != null)
            {
            <span>|</span>
            <a href="/Article/Details/@article.Id?action=like">
                <button type="button" class="btn btn-danger pull-right btn-xs" style="margin-left: 7px;">
                    <span class="glyphicon glyphicon-heart" aria-hidden="true"></span> Like
                </button>
            </a>


            <a href="/Article/Details/@article.Id?action=unlike">
                <button type="button" class="btn btn-warning pull-right btn-xs" style="margin-left: 7px;">
                    <span class="glyphicon glyphicon-heart-empty" aria-hidden="true"></span> Unlike
                </button>
            </a>
            }

        </div>
    </div>
</div>

<div class="row" style="margin-top: 50px;">
    <div class="col-md-12">
        <h3 style="font-weight:700">Commentaires (5)</h3>
    </div>
</div>

<hr style="margin-top: 0 !important;" />

<div class="row">

    <div class="col-md-8 col-md-offset-2">
        <div class="well" style="padding: 10px !important;">
            <form class="form-horizontal">
                <fieldset>

                    <div class="form-group">
                        <label class="col-lg-2 control-label">Titre :</label>
                        <div class="col-lg-9">
                            <input type="text" value="" class="form-control" name="">
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="textArea" class="col-lg-2 control-label">Texte :</label>
                        <div class="col-lg-10">
                            <textarea class="form-control" rows="2" style="max-width: none !important;"></textarea>
                            <span class="help-block">A longer block of help text that breaks onto a new line and may extend beyond one line.</span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12">
                            <button type="button" class="btn btn-primary pull-right">
                                Poster
                            </button>
                        </div>
                    </div>
                </fieldset>
</form>
        </div>
    </div>
</div>

<br />


@foreach(var comment in ViewBag.comments)
{
    <div class="row">
        <div class="col-md-7">
            <div class="comment">
                <p class="username">@IziWatch.DataAccess.User.GetUser(comment.id).Login</p>
                <p class="title">comment.Title</p>
                <p class="text">comment.Text</p>
            </div>
        </div>
    </div>

    <hr style="margin-top: 5px; margin-bottom: 5px; width: 70%;" />

}



