
@{
    ViewBag.Title = "HandleAccounts";
}

<h2>Gérer les pages Twitter/Facebook</h2>

<hr />

<div class="row">

    <div class="col-md-6">

        <div class="row">
            <p class="text-center" style="font-weight: 700; font-size: 25px;">Facebook</p>
        </div>

        <hr style="width: 70%; margin: 5px 0px;" />

        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th class="text-center">Id</th>
                    <th class="text-center">Nom de la page</th>
                    <th class="text-center">Identifiant</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody class="text-center">
                @foreach(var socialFB in ViewBag.socialsFB)
                {
                <tr class="info">
                    <td>@socialFB.Id</td>
                    <td>@socialFB.Account</td>
                    <td>@socialFB.Identifier</td>
                    <td>
                        <a href="/Admin/HandleAccounts?action=delete&id=@socialFB.Id" type="button" class="btn btn-danger btn-xs">Supprimer</a>
                    </td>
                </tr>
                }

            </tbody>
        </table>

    </div>

    <div class="col-md-6">

        <div class="row">
            <p class="text-center" style="font-weight: 700; font-size: 25px;">Twitter</p>
        </div>

        <hr style="width: 70%; margin: 5px 0px;" />

        <table class="table table-striped table-hover ">
            <thead>
                <tr>
                    <th class="text-center">Id</th>
                    <th class="text-center">Nom de la page</th>
                    <th class="text-center">Identifiant</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody class="text-center">
                @foreach(var socialTwitter in ViewBag.socialsTwitter)
                {
                <tr class="warning">
                    <td>@socialTwitter.Id</td>
                    <td>@socialTwitter.Account</td>
                    <td>@socialTwitter.Identifier</td>
                    <td>
                        <a href="/Admin/HandleAccounts?action=delete&id=@socialTwitter.Id" type="button" class="btn btn-danger btn-xs">Supprimer</a>
                    </td>
                </tr>
                }

            </tbody>
        </table>

    </div>

</div>


<h2 class="text-center">Ajouter une page</h2>
<hr style="width: 50%;"/>
<div class="row">

    <div class="col-md-6 col-md-offset-3">
        <div class="well text-center">
            <form class="form-horizontal" method="get" action="/Admin/HandleAccounts">
                <fieldset>

                    <div class="form-group">
                        <label class="col-lg-4 control-label">Nom de la page :</label>
                        <div class="col-lg-6">
                            <input type="text" name="pageName" class="form-control">
                            <span class="help-block" style="font-size: 12px;">Facebook : Nom de la page, Twitter : Nom de la page Twitter précédé par un @@</span>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-lg-4 control-label">Identifier :</label>
                        <div class="col-lg-6">
                            <input type="text" name="pageIdentifier" class="form-control">
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-lg-4 control-label">Réseau social :</label>
                        <div class="col-lg-4">
                            <select class="form-control" name="social">
                                <option value="facebook">Facebook</option>
                                <option value="twitter">Twitter</option>
                            </select>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12">
                            <input type="submit" name="action" value="Ajouter" class="btn btn-primary pull-right">
                        </div>
                    </div>
                </fieldset>
            </form>

        </div>
    </div>

</div>

