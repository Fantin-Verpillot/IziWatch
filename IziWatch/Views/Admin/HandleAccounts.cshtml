<h2 class="text-center">Ajouter une page</h2>
<hr style="width: 50%;"/>
<div class="row">

    <div class="col-md-6 col-md-offset-3">
        <div class="well text-center">
            <form class="form-horizontal" method="post" action="">
                <fieldset>

                    <div class="form-group">
                        <label class="col-lg-4 control-label">Nom de la page :</label>
                        <div class="col-lg-6">
                            <input type="text" name="" class="form-control">
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-lg-4 control-label">ID de la page :</label>
                        <div class="col-lg-6">
                            <input type="text" name="" class="form-control">
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-lg-4 control-label">Réseau social :</label>
                        <div class="col-lg-4">
                            <select class="form-control">
                                <option>Facebook</option>
                                <option>Twitter</option>
                            </select>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12">
                            <input type="submit" name="action" value="Ajouter" class="btn btn-primary pull-right">
                        </div>
                    </div>
                </fieldset>
            </form>

        </div>
    </div>

</div>

